\begin_inset Formula 
\begin{align*}
\mu^{*}(E) & \geq\sum_{i=1}^{\infty}\mu^{*}(E\cap A_{i})+\mu^{*}(E\cap A^{c})\\
 & \geq\mu^{*}(E\cap A)+\mu^{*}(E\cap A^{c}),
\end{align*}

\end_inset

