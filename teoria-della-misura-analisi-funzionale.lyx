\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:Thm. Lusin - LP2"

\end_inset

 e 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:Sup (Lusin) - LP2"

\end_inset

.
\end_layout

