\begin_inset Formula 
\begin{align*}
\intop_{X\times Y}f\,\text{d}(\mu\times\nu) & =\lim_{n\to\infty}\intop_{X\times Y}s_{n}\,\text{d}(\mu\times\nu)\\
 & =\lim_{n\to\infty}\intop_{X}\text{d}\mu(x)\intop_{Y}\text{d}\nu(y)\,s_{n}(x,y)\\
 & =\intop_{X}\text{d}\mu(x)\lim_{n\to\infty}\intop_{Y}\text{d}\nu(y)\,s_{n}(x,y)\\
 & =\intop_{X}\text{d}\mu(x)\intop_{Y}\text{d}\nu(y)\,f(x,y).
\end{align*}

\end_inset

